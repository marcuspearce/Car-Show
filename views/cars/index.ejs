<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Car Show</h1>
            <p>A collection showcasing some of my favourite cars</p>
            <p>
                <a class="btn btn-primary btn-large" href="/cars/new">Add New Car</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <!--style="display:flex; flex-wrap: wrap;" makes grid flexible even w/ images diff height-->
        <% cars.forEach(function(car){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= car.image %>">
                    <div class="caption">
                        <h4><%= car.brand %> <em><%=car.model%></em></h4>
                    </div>
                    <p>
                        <a href="/cars/<%= car._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>


<% include ../partials/footer %>