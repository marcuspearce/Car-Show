<!--EDIT CAR-->
<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Edit <%=car.brand%> <%=car.model%></h1>
        
        <div style="width:30%; margin:30px auto;">
            <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="car[brand]" value="<%=car.brand%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="car[model]" value="<%=car.model%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="car[image]" value="<%=car.image%>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            
            <a href="/cars">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>